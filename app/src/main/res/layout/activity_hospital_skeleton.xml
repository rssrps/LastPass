<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hospital_skeleton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/eat_background1"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.raman.lastpass_project.hospital_skeleton">

    <ImageView
        android:layout_width="220dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/igm_1"
        android:id="@+id/photo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/address"
        android:layout_marginTop="23dp"
        android:id="@+id/imageView9"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true" />

    <ImageView
        app:srcCompat="@drawable/icon_24x7"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/bg"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <ImageView
        android:layout_height="30dp"
        app:srcCompat="@drawable/phoneicon"
        android:layout_marginTop="19dp"
        android:id="@+id/imageView10"
        android:layout_width="30dp"
        android:layout_below="@+id/imageView9"
        android:layout_alignEnd="@+id/imageView9" />

    <TextView
        android:text="Hospital Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textStyle="bold"
        android:id="@+id/name"
        android:layout_below="@+id/photo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <TextView
        android:text="+91 0000000000"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/phone"
        android:gravity="center"
        android:layout_alignTop="@+id/imageView10"
        android:layout_alignStart="@+id/photo" />

    <TextView
        android:text="State Highway Hulesighanagar,Shirpur"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/address"
        android:gravity="center"
        android:layout_alignTop="@+id/imageView9"
        android:layout_alignStart="@+id/phone" />

</RelativeLayout>
