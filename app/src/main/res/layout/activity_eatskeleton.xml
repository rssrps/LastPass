<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_eatskeleton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eat_background1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.raman.lastpass_project.eatskeleton">

    <ImageView
        app:srcCompat="@drawable/logo"
        android:id="@+id/photo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="220dp"
        android:layout_height="180dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/righticon"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/photo"
        android:layout_marginTop="71dp"
        android:id="@+id/righticon" />

    <TextView
        android:text="Eatname"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_below="@+id/photo"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="1.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingnumber"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/address"
        android:id="@+id/addressicon"
        android:layout_below="@+id/ratingfixed"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="State Highway Hulesighanagar,Shirpur"
        android:id="@+id/address"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/addressicon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <ImageView
        app:srcCompat="@drawable/phoneicon"
        android:id="@+id/phoneicon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/address"
        android:layout_alignEnd="@+id/addressicon" />

    <ImageView
        app:srcCompat="@drawable/clockicon"
        android:layout_marginTop="29dp"
        android:id="@+id/cloclicon"
        android:layout_height="35dp"
        android:layout_width="30dp"
        android:layout_below="@+id/phoneicon"
        android:layout_alignStart="@+id/phoneicon" />

    <TextView
        android:text=" 8:00am - 10:00pm"
        android:layout_height="wrap_content"
        android:id="@+id/timings"
        android:layout_width="140dp"
        android:layout_alignBaseline="@+id/opennow"
        android:layout_alignBottom="@+id/opennow"
        android:layout_alignEnd="@+id/photo" />

    <ImageView
        app:srcCompat="@drawable/starrating"
        android:id="@+id/ratingfixed"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/addressicon" />

    <TextView
        android:text="Open Now"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/opennow"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignTop="@+id/cloclicon"
        android:layout_alignStart="@+id/address" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/heartwhite"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/heart" />

    <Button
        android:text="Add a review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addreview"
        android:alpha="0.6"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Comments"
        android:textSize="12sp"
        android:id="@+id/viewcomm"
        android:layout_width="100dp"
        android:alpha="0.6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_height="45dp" />

    <Button
        android:text="Rate"
        android:id="@+id/rate"
        android:alpha="0.6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_width="100dp"
        android:layout_height="42dp" />

    <TextView
        android:text="02563-255283  "
        android:layout_height="30dp"
        android:gravity="center"
        android:id="@+id/phone"
        android:layout_width="120dp"
        android:layout_alignBottom="@+id/phoneicon"
        android:layout_toEndOf="@+id/phoneicon" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/lefticon"
        android:id="@+id/lefticon"
        android:layout_alignTop="@+id/righticon"
        android:layout_toStartOf="@+id/photo" />

    <ImageView
        app:srcCompat="@drawable/callgirl"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/girlskeleton"
        android:layout_width="40dp"
        android:layout_height="40dp" />

</RelativeLayout>
