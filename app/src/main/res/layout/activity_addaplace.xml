<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_addaplace"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/eat_background1"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.raman.lastpass_project.addaplace">

    <ImageView
        app:srcCompat="@drawable/add"
        android:layout_marginStart="32dp"
        android:layout_marginTop="17dp"
        android:id="@+id/icnonadd"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:text="Add new place"
        android:layout_width="wrap_content"
        android:textSize="26sp"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:id="@+id/textView19"
        android:layout_alignBottom="@+id/icnonadd"
        android:layout_toEndOf="@+id/icnonadd"
        android:layout_marginStart="17dp" />

    <TextView
        android:text=" Category:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:id="@+id/textView33"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_below="@+id/icnonadd"
        android:layout_alignStart="@+id/icnonadd" />

    <RadioButton
        android:text="Nearby "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton2"
        android:textSize="12sp"
        android:fontFamily="monospace"
        android:layout_alignStart="@+id/radioButton2"
        android:id="@+id/radioButton3" />

    <RadioButton
        android:text="Shop"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:fontFamily="monospace"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton2"
        android:layout_below="@+id/radioButton"
        android:layout_alignStart="@+id/radioButton" />

    <RadioButton
        android:text="Banking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="monospace"
        android:layout_below="@+id/radioButton4"
        android:layout_alignStart="@+id/radioButton4"
        android:id="@+id/radioButton5" />

    <RadioButton
        android:text="Alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="monospace"
        android:layout_below="@+id/radioButton5"
        android:layout_alignStart="@+id/radioButton5"
        android:id="@+id/radioButton6" />

    <RadioButton
        android:text="Stay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="monospace"
        android:id="@+id/radioButton4"
        android:layout_alignBaseline="@+id/radioButton"
        android:layout_alignBottom="@+id/radioButton"
        android:layout_alignEnd="@+id/textView19"
        android:layout_marginEnd="25dp" />

    <RadioButton
        android:text="Eat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="monospace"
        android:layout_marginTop="19dp"
        android:id="@+id/radioButton"
        android:layout_below="@+id/textView33"
        android:layout_toEndOf="@+id/icnonadd" />

    <TextView
        android:text="Name: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView34"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignBaseline="@+id/placename"
        android:layout_alignBottom="@+id/placename"
        android:layout_toStartOf="@+id/radioButton3" />

    <TextView
        android:text="location"
        android:layout_width="wrap_content"
        android:layout_below="@+id/placename"
        android:layout_alignStart="@+id/textView34"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:id="@+id/textView35"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_height="25dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/address"
        android:id="@+id/imageView5"
        android:layout_alignBottom="@+id/textView35"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText2"
        android:hint="location "
        android:layout_alignBaseline="@+id/textView35"
        android:layout_alignBottom="@+id/textView35"
        android:layout_alignStart="@+id/placename" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="19dp"
        android:id="@+id/placename"
        android:hint="name "
        android:layout_below="@+id/radioButton3"
        android:layout_alignStart="@+id/textView19"
        android:layout_marginStart="18dp" />

    <TextView
        android:text="Contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/textView36"
        android:layout_below="@+id/editText2"
        android:layout_alignStart="@+id/textView35"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <ImageView
        android:layout_height="20dp"
        app:srcCompat="@drawable/phoneicon"
        android:id="@+id/imageView6"
        android:layout_width="20dp"
        android:layout_alignTop="@+id/textView36"
        android:layout_alignEnd="@+id/imageView5" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/abc"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/textView34"
        android:layout_alignEnd="@+id/imageView5" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/undoicon"
        android:id="@+id/undoicon"
        android:layout_alignTop="@+id/textView33"
        android:layout_alignEnd="@+id/placename" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText3"
        android:hint="+91"
        android:layout_alignBaseline="@+id/textView36"
        android:layout_alignBottom="@+id/textView36"
        android:layout_alignStart="@+id/editText2" />

    <ImageView
        app:srcCompat="@drawable/rightadd"
        android:id="@+id/rightadd"
        android:layout_above="@+id/textView37"
        android:layout_alignEnd="@+id/editText3"
        android:layout_height="40dp"
        android:layout_width="40dp" />

    <TextView
        android:text="Add"
        android:textSize="12sp"
        android:textColor="#0000ff"
        android:gravity="center"
        android:fontFamily="casual"
        android:layout_height="wrap_content"
        android:id="@+id/textView37"
        android:layout_width="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/rightadd" />
</RelativeLayout>
