<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.raman.lastpass_project.Account">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/profile2"
        android:layout_marginStart="17dp"
        android:layout_marginTop="18dp"
        android:id="@+id/profilepic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_marginStart="10dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/upload"
        android:id="@+id/imageView3"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/profilepic"
        android:layout_alignStart="@+id/profilepic" />

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/username1"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:text="Admin"
        android:textSize="22sp"
        android:layout_marginEnd="51dp"
        android:gravity="center"
        android:layout_marginTop="19dp"
        android:layout_alignTop="@+id/profilepic"
        android:layout_alignParentEnd="true"
        android:layout_width="100dp" />

    <TextView
        android:text="Passes            4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/profilepic"
        android:layout_alignStart="@+id/username1"
        android:layout_marginStart="12dp" />

    <TextView
        android:text="Ramaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remaining"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:text="Visited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:id="@+id/textView7" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/visit"
        android:layout_below="@+id/remaining"
        android:layout_alignStart="@+id/remaining" />

    <TextView
        android:text="We will manage your passes."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:text="Let us know when you visit Shirpur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="58dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_below="@+id/managecash"
        android:layout_alignStart="@+id/managecash" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/favourite"
        android:id="@+id/myfav"
        android:layout_above="@+id/textView13"
        android:layout_alignStart="@+id/imageView3" />

    <TextView
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logout"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/logoutbutton"
        android:layout_marginBottom="18dp" />

    <TextView
        android:text="favourites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_alignBaseline="@+id/logout"
        android:layout_alignBottom="@+id/logout"
        android:layout_alignStart="@+id/profilepic" />

    <TextView
        android:text="Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_below="@+id/settings123"
        android:layout_toEndOf="@+id/textView7" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/cash2"
        android:id="@+id/managecash"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/settings"
        android:id="@+id/settings123"
        android:layout_below="@+id/textView6"
        android:layout_alignEnd="@+id/username1" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/logout2"
        android:id="@+id/logoutbutton"
        android:layout_above="@+id/logout"
        android:layout_toEndOf="@+id/settings123" />

    <TextView
        android:text="Go Shirpur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_marginEnd="32dp"
        android:layout_below="@+id/goshirpur"
        android:layout_toStartOf="@+id/textView11" />

    <ImageView
        app:srcCompat="@drawable/plane"
        android:layout_marginTop="14dp"
        android:id="@+id/goshirpur"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textView5"
        android:layout_toStartOf="@+id/textView7" />

    <ImageView
        android:layout_width="15dp"
        app:srcCompat="@drawable/circle"
        android:id="@+id/cir3"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/cir1"
        android:layout_alignEnd="@+id/goshirpur" />

    <ImageView
        android:layout_width="15dp"
        app:srcCompat="@drawable/circle"
        android:id="@+id/cir2"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/myfav"
        android:layout_toStartOf="@+id/textView6"
        android:layout_marginEnd="13dp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/circle"
        android:id="@+id/cir1"
        android:layout_alignTop="@+id/cir2"
        android:layout_alignStart="@+id/textView6" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/circle"
        android:id="@+id/cir4"
        android:layout_marginEnd="12dp"
        android:layout_alignTop="@+id/cir3"
        android:layout_toStartOf="@+id/textView11" />

    <ImageView
        app:srcCompat="@drawable/callgirl"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/girl_account"
        android:layout_width="40dp"
        android:layout_height="40dp" />

</RelativeLayout>
